<Window x:Class="StockUI.PopUp.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockUI.PopUp"
        mc:Ignorable="d"
        Title="Settings" Height="300" Width="250">
    <StackPanel Margin="10,10,10,10">
        <TextBlock>API Key</TextBlock>
        <TextBox x:Name="APIKeyTextBox"/>
        <TextBlock>Minimum Delay</TextBlock>
        <TextBox x:Name="MinimumDelayTextBox"/>
        <TextBlock>Minimum Gain</TextBlock>
        <TextBox x:Name="MinimumGainTextBox"/>
        <TextBlock>Minimum Growth</TextBlock>
        <TextBox x:Name="MinimumGrowthTextBox"/>
        <TextBlock>Minimum Price</TextBlock>
        <TextBox x:Name="MinimumPriceTextBox"/>
        <Button Margin="80,10,80,10" Content="Save" Click="OnSave" />
    </StackPanel>

</Window>
